<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/PGtextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solve puzzle below:  " />
        <TextView
            android:id="@+id/PGPuzzleNumber1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1" />
        <TextView
            android:id="@+id/PGPuzzleNumber2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/5" />
    </LinearLayout>

    <TextView
        android:id="@+id/PGPuzzleField"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:layout_weight="0.14"
        android:text="Puzzle will come here"/>

    <TextView
        android:id="@+id/PGtextView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="write ansver here:" />

    <EditText
        android:id="@+id/PGAnswerField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="answer here" />

        <TextView
            android:id="@+id/PG_GPSHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="When ready click send-button " />

     <Button
        android:id="@+id/PGSendAnsverButton"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="Send Ansver" />

    <Button
        android:id="@+id/PGSimuPuzzlButton"
        android:layout_width="183dp"
        android:layout_height="wrap_content"
        android:text="Simulate puzzle arraival" />

    <ImageView
        android:id="@+id/PPimageView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:srcCompat="@android:drawable/btn_dialog"
        android:layout_weight="0.10" />


</LinearLayout>